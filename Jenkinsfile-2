pipeline {
    agent{
        node {
            label 'docker_agent_jenkins'
        }
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/hawk-H97/potential-giggle-basic-html', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                sh 'npm install -g htmlhint stylelint'
                sh 'npm fund'
                sh 'echo "Tools installed"'
            }
        }
        stage('Test') {
            steps {
                sh 'htmlhint *.html || true'
                sh 'stylelint "*.css" || true'
            }
        }
        stage('Scan') {
            environment {
                scannerHome = tool 'SonarQube Scanner'
            }
            steps {
                withSonarQubeEnv(installationName: 'sq1') {
                    sh 'apk add sonar-scanner'
                    sh 'echo "Sonar-scanner is  installed"'
                    sh '/bin/sonar-scanner -Dsonar.projectKey=Barber_website -Dsonar.projectName=Barber_website'
                }
            }
        }
    }
}